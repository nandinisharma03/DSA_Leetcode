class Solution {
  public:
    int maxSubarraySum(vector<int>& arr, int k) {
        // code here
        int sum=0;
        int i=0;int j=0;
        int maxi=INT_MIN;
        while(j<arr.size()){
            sum=sum+arr[j];
            if(j-i+1==k){
                maxi=max(maxi,sum);
                  sum=sum-arr[i];
                  i++;
            }
            j++;
        }
     return maxi;
    }
};
